{
  "name": "authperms-microservice",
  "version": "1.0.0",
  "description": "Microservice d'authentification et de gestion des permissions pour HEVIA",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev src/app.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node dist/scripts/run-migrations.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "typeorm": "^0.3.17",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.0.1",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.10.2",
    "@types/jest": "^29.5.4",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.48.0",
    "prettier": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/test"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": ["**/test/**/*.test.ts"]
  }
}